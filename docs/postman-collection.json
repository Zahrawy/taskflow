{
    "info": {
        "name": "TaskFlow API",
        "description": "API documentation for TaskFlow task management application",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5000/api"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"demo@taskflow.test\",\n  \"password\": \"Demo1234!\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/auth/logout",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "logout"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/auth/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "me"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Tasks",
            "item": [
                {
                    "name": "Get All Tasks",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/tasks",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "tasks"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "todo",
                                    "disabled": true
                                },
                                {
                                    "key": "priority",
                                    "value": "high",
                                    "disabled": true
                                },
                                {
                                    "key": "sortBy",
                                    "value": "createdAt",
                                    "disabled": true
                                },
                                {
                                    "key": "order",
                                    "value": "desc",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Single Task",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/tasks/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "tasks",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "task_id_here"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Task",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"New Task\",\n  \"description\": \"Task description\",\n  \"status\": \"todo\",\n  \"priority\": \"medium\",\n  \"dueDate\": \"2024-12-31\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/tasks",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "tasks"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Task",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Task\",\n  \"status\": \"in-progress\",\n  \"priority\": \"high\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/tasks/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "tasks",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "task_id_here"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Task",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/tasks/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "tasks",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "task_id_here"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            }
        }
    ]
}